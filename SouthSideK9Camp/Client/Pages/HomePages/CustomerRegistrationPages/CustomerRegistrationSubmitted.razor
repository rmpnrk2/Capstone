@page "/customer-registration-submitted";

@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-16 mb-16">

    <MudText Typo="Typo.h4">SouthSide K9 Customer Registration</MudText>
    <MudText Typo="Typo.body1">Your registration form has been received. You may now safely close this website.</MudText>
    <MudText Typo="Typo.body1">Please allow some time while we review the information, and you will receive an email notification shortly.</MudText>

    <MudButton OnClick="@_Return" Color="Color.Primary">Return to Homepage</MudButton>

</MudContainer>

@code
{
    private void _Return()
    {
        NavigationManager.NavigateTo("");
    }
}
