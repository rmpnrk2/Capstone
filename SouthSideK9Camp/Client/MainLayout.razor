@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

@* Mudblazor Components *@
<MudThemeProvider Theme="@_Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1" Style="@($"background:{_Theme.PaletteLight.AppbarBackground};")">
        <MudBreakpointProvider>

            @* Desktop view *@
            <MudHidden Breakpoint="Breakpoint.MdAndDown">

                <MudImage Src="Images/logoname.jpg" Height="50" Class="ml-16" />
                <MudSpacer />
                <MudStack Row>
                    <MudLink OnClick="@_Anchor" Href="javascript:void(0)" Typo="Typo.body1" Color="Color.Dark">JOIN US</MudLink>
                    <MudLink OnClick="@_Home" Typo="Typo.body1" Color="Color.Dark">HOME</MudLink>
                </MudStack>

            </MudHidden>

            @* Mobile view *@
            <MudHidden Breakpoint="Breakpoint.MdAndDown" Invert>

                <MudImage Src="Images/logoname.jpg" Height="50" Class="ml-16" />

                <MudSpacer />

                <MudMenu Icon="@Icons.Material.Filled.Menu" Color="Color.Dark">
                    <MudMenuItem><MudLink OnClick="@_Anchor" Href="javascript:void(0)" Typo="Typo.body1" Color="Color.Dark">JOIN US</MudLink></MudMenuItem>
                    <MudMenuItem><MudLink OnClick="@_Home" Typo="Typo.body1" Color="Color.Dark">HOME</MudLink></MudMenuItem>
                </MudMenu>

            </MudHidden>

        </MudBreakpointProvider>
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

@code
{
    private MudTheme _Theme = new MudTheme()
    {
        PaletteLight = new PaletteLight
        {
            AppbarBackground = "#FFFFFF"
        },
    };

    private void _Home()
    {
        NavigationManager.NavigateTo("/");
    }

    private void _Anchor()
    {
        NavigationManager.NavigateTo(NavigationManager.BaseUri + "#join-us", forceLoad: true);
    }
}