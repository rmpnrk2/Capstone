@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

@* add mudblazor components *@
<MudThemeProvider IsDarkMode/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1">

        <MudIconButton Icon="@menuIcon" OnClick="@ToggleMudDrawer" />
        <MudImage Src="Images/logonamedark.jpg" Height="50" Class="ml-16" />

        <MudSpacer />

    </MudAppBar>

    <MudDrawer @bind-Open="@mudDrawerToggle" ClipMode="DrawerClipMode.Docked">
        <MudNavMenu>

            <MudStack AlignItems="AlignItems.Center" Class="my-10">
                <MudImage Src="Images/watermark.png" Height="120" />
            </MudStack>

            <MudNavLink Disabled Href="" Icon="@Icons.Material.Filled.Dashboard" Match="NavLinkMatch.All">Dashboard</MudNavLink>
            <MudNavLink Href="/admin/reservation-list" Icon="@Icons.Material.Filled.DateRange" Match="NavLinkMatch.All">Reservation</MudNavLink>
            <MudNavLink Href="/admin/report-list" Icon="@Icons.Material.Filled.Flag" Match="NavLinkMatch.All">Progress</MudNavLink>
            <MudNavLink Href="/admin/invoice-list" Icon="@Icons.Material.Filled.ReceiptLong" Match="NavLinkMatch.All">Account</MudNavLink>

            <MudNavGroup Title="Records" Icon="@Icons.Material.Filled.People" Expanded>
                <MudNavLink Href="/admin/client-list" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.All">Clients</MudNavLink>
                <MudNavLink Href="/admin/customer-list" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.All">Board and Train</MudNavLink>
                <MudNavLink Href="/admin/member-list" Icon="@Icons.Material.Filled.Person" Match="NavLinkMatch.All">Members</MudNavLink>
            </MudNavGroup>

            <MudNavLink Disabled Href="/manage" Icon="@Icons.Material.Filled.ManageAccounts" Match="NavLinkMatch.All">Manage User</MudNavLink>

        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>

@code
{
    // muddrawer toggle
    bool mudDrawerToggle = false;
    string menuIcon = Icons.Material.Filled.Menu;
    public void ToggleMudDrawer()
    {
        menuIcon = (mudDrawerToggle) ? @Icons.Material.Filled.Menu : @Icons.Material.Filled.MenuOpen;

        mudDrawerToggle = !mudDrawerToggle;
    }
}